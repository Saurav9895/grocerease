
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole in ['main', 'standard'];
    }

    // Products: Public can read. Admins have full C/D access. 
    // Users can update, but not critical fields. This is needed for checkout and reviews.
    match /products/{productId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (
        isSignedIn() &&
        // Users cannot change these core fields
        request.resource.data.name == resource.data.name &&
        request.resource.data.price == resource.data.price &&
        request.resource.data.description == resource.data.description &&
        request.resource.data.category == resource.data.category &&
        request.resource.data.imageUrl == resource.data.imageUrl
      );
    }

    // Categories: Public can read, Admins can write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: Users can create their own orders and read their own orders. Admins can read all orders.
    match /orders/{orderId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Users: Users can read/update their own profile. Admins can read all profiles. Main admin can update roles.
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Settings: Only main admin can read/write
    match /settings/{docId} {
      allow read, write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole == 'main';
    }
    
    // Attributes: Public can read, Admins can write
    match /attributes/{attributeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

     // Reviews: Users can create reviews. Admins can delete them.
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }
  }
}
