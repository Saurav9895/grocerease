rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Products & Categories: Public Read, Admin Write ---
    match /products/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Orders ---
    match /orders/{orderId} {
      // Users can create their own order.
      allow create: if request.auth != null;

      // Users can get their own orders, Admins can get any order.
      allow get: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth != null);
      
      // Admins can list all orders for the dashboard.
      allow list: if request.auth != null;

      // Admins can update/delete orders.
      allow update, delete: if request.auth != null;
    }
  }
}
