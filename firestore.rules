rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Products can be read by anyone, but only created/updated/deleted by authenticated users.
    match /products/{productId} {
      allow read;
      allow write: if request.auth != null;
    }

    // Categories can be read by anyone, but only created/updated/deleted by authenticated users.
    match /categories/{categoryId} {
      allow read;
      allow write: if request.auth != null;
    }

    // Orders can be created by authenticated users for themselves.
    // Users can read their own orders (enforced by the query in getUserOrders).
    // Admins (any authenticated user) can read all orders.
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow any authenticated user to read orders. This is necessary for the admin panel.
      // User-specific orders are filtered in the application code.
      allow read: if request.auth != null;
      
      // For now, disallow updates and deletes from the client.
      allow update, delete: if false;
    }
  }
}
