
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC READS
    match /products/{productId} {
      allow read: if true;
      match /reviews/{reviewId} {
        allow read: if true;
      }
    }
    match /categories/{categoryId} {
      allow read: if true;
    }
    match /settings/{settingId} {
      allow read: if true;
    }
     match /promocodes/{promoId} {
      allow read: if true;
    }

    // ADMIN WRITES (SIMPLIFIED)
    match /products/{productId} {
      allow write: if request.auth != null;
    }
     match /categories/{categoryId} {
      allow write: if request.auth != null;
    }
    match /settings/{settingId} {
      allow write: if request.auth != null;
    }
    match /promocodes/{promoId} {
      allow write: if request.auth != null;
    }

    // USER DATA
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ORDERS
    match /orders/{orderId} {
      // Users can create their own orders.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Users can read their own orders.
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Listing is open to authenticated users for admin/user-specific queries.
      // Client-side code MUST filter by userId for security.
      allow list: if request.auth != null;

      // Admin can update any order (e.g., status).
      allow update: if request.auth != null; // Simplified rule for admin
    }

    // REVIEWS
     match /products/{productId}/reviews/{reviewId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      }
  }
}
