
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===== Default Deny =====
    // match /{document=**} {
    //   allow read, write: if false;
    // }

    // ===== Admin Access =====
    // Admins can read and write all documents.
    match /{document=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // ===== User-specific Rules =====
    // Users can manage their own profile.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Users can read their own orders. Admins can read all orders.
    match /orders/{orderId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if request.auth != null; // Any authenticated user can create an order.
    }
    
    // Logged-in users can create reviews.
    match /products/{productId}/reviews/{reviewId} {
        allow create: if request.auth != null;
    }

    // ===== Public Read Rules =====
    // Anyone (including unauthenticated users) can read products, categories, reviews, and settings.
    match /products/{productId} {
      allow read: if true;
    }

    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
    }
    
    match /categories/{categoryId} {
        allow read: if true;
    }
    
    match /settings/{settingId} {
        allow read: if true;
    }
    
    match /promocodes/{promoId} {
        allow read: if true;
    }
  }
}
