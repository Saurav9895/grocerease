rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Products can be read by anyone, but only modified by authenticated users (admins).
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Categories can be read by anyone, but only modified by authenticated users (admins).
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Orders can be created by authenticated users for themselves.
    // Authenticated users (acting as admins or customers) can read orders.
    // The application logic ensures users can only see their own orders.
    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth != null;
      // Users cannot update or delete orders after they are placed.
      allow update, delete: if false;
    }
  }
}
