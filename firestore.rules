
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user has any admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole != null;
    }

    // Helper function to check if the user is a main administrator
    function isMainAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole == 'main';
    }

    // Products can be read by anyone, but only created/edited by admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();

      // Reviews can be read by anyone.
      // Authenticated users can create reviews for a product.
      // Admins can moderate (delete) reviews.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }
    }

    // Categories can be read by anyone, but only created/edited by admins.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Attributes can be read by anyone, but only created/edited by admins.
    match /attributes/{attributeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users can create their own profile.
    // They can only read or update their own data.
    // Main admins can manage all user profiles.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow get, update: if request.auth.uid == userId || isMainAdmin();
      allow list: if isMainAdmin();
    }

    // Orders can be created by authenticated users.
    // They can only be read/updated by the user who placed the order or an admin.
    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update: if isAdmin() || get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
    }
    
    // Store settings can only be read/written by a main admin.
    match /settings/{settingId} {
      allow read, write: if isMainAdmin();
    }

    // Promo codes can be read by anyone (for client-side validation), but only managed by main admins.
    match /promocodes/{code} {
      allow read: if true;
      allow write: if isMainAdmin();
    }
  }
}
