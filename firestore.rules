
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole != null;
    }

    function isMainAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole == 'main';
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /reviews/{reviewId} {
      	allow read: if true;
        allow create: if request.auth != null;
      }
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin();
    }

    match /settings/{settingId} {
    	allow read: if true;
      allow write: if isMainAdmin();
    }
    
    match /promocodes/{codeId} {
    	allow read: if true;
      allow write: if isMainAdmin();
    }
    
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isMainAdmin();
      allow create: if request.auth.uid == userId;
      // A user can update their own profile. A main admin can update other users' roles, but cannot make them a main admin.
      allow update: if request.auth.uid == userId ||
      							 (isMainAdmin() && request.resource.data.adminRole != 'main');
    }
  }
}
