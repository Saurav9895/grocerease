
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole in ['main', 'standard'];
    }

    function isMainAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole == 'main';
    }

    function isDeliveryPerson(order) {
      return request.auth.uid == order.deliveryPersonId;
    }

    match /users/{userId} {
      // Allow user to read/update their own profile, but not change their role.
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if (request.auth.uid == userId && !("adminRole" in request.resource.data)) || isMainAdmin();
    }

    match /products/{productId} {
      allow read: if true; // Products are public
      allow create, delete: if isAdmin();
      
      // Allow stock update during a transaction (order placement) or by an admin
      allow update: if isAdmin() || (request.auth.uid != null && request.resource.data.stock != resource.data.stock);
    }

    match /products/{productId}/reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth.uid != null;
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /attributes/{attributeId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // User can see their own orders, Admin can see all, Delivery person can see assigned order.
      allow read: if request.auth.uid == resource.data.userId || isAdmin() || isDeliveryPerson(resource.data);
      
      // Admin can update any part of the order.
      // Delivery person can only update status to Shipped or Delivered.
      allow update: if isAdmin() || (isDeliveryPerson(resource.data) && request.resource.data.status != resource.data.status && request.resource.data.status in ['Shipped', 'Delivered']);
    }

    match /promocodes/{codeId} {
        allow read: if true;
        allow create, update, delete: if isMainAdmin();
    }
    
    match /settings/{docId} {
      allow read: if true;
      allow write: if isMainAdmin();
    }
  }
}
