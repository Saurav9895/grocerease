rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      let userProfile = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return request.auth != null && ('adminRole' in userProfile) && (userProfile.adminRole == 'main' || userProfile.adminRole == 'standard');
    }
    
    match /users/{userId} {
      // Users can read and write to their own profile.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read any user profile.
      allow get: if isAdmin();
    }
  
    match /products/{productId} {
      allow read: if true;
      // Allow writes only by admins
      allow write: if isAdmin();
    }
    
    match /products/{productId}/reviews/{reviewId} {
        allow read: if true;
        // Allow create only by authenticated users
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /attributes/{attributeId} {
      allow read, write: if isAdmin();
    }
    
    match /orders/{orderId} {
      // Allow read by admins, the user who placed the order, or the assigned delivery person
      allow read: if request.auth != null && 
        (isAdmin() || resource.data.userId == request.auth.uid || resource.data.deliveryPersonId == request.auth.uid);
      
      // Allow creation by authenticated users for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow updates by admins or the assigned delivery person
      allow update: if request.auth != null && (isAdmin() || resource.data.deliveryPersonId == request.auth.uid);
    }
    
     match /promocodes/{codeId} {
        // Only allow read if the code is active. Admins can read all.
        allow read: if resource.data.isActive == true || isAdmin();
        allow write: if isAdmin();
     }
     
     match /settings/{settingId} {
        allow read: if true;
        // Only main admins can write to settings
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole == 'main';
     }
  }
}
