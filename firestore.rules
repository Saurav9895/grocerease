
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole == 'main';
    }
    
    function isStaff() {
        return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole in ['main', 'standard', 'delivery'];
    }

    function isVendor() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole == 'vendor';
    }

    function getVendorId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.vendorId;
    }


    // USER PROFILES
    match /users/{userId} {
      // Users can read their own profile. Staff can read any profile (e.g. for delivery info)
      allow read: if isAuth() && (request.auth.uid == userId || isStaff());
      // Main admins can update any user's profile (e.g., to grant roles)
      allow update: if isAuth() && (isAdmin() || request.auth.uid == userId);
    }

    // PRODUCTS
    match /products/{productId} {
      allow read: if true;
      // Write access for the product's vendor or a main admin
      allow write: if isAuth() && (
        (isVendor() && getVendorId() == request.resource.data.vendorId)
        || isAdmin()
      );
    }

    // CATEGORIES & ATTRIBUTES
    match /categories/{categoryId} {
       allow read: if true;
       allow write: if isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole in ['main', 'standard'];
    }
    
    match /attributes/{attributeId} {
       allow read: if true;
       allow write: if isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.adminRole in ['main', 'standard'];
    }

    // REVIEWS
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuth();
      allow update, delete: if false;
    }

    // ORDERS
    match /orders/{orderId} {
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      // Customers can read their own orders. Staff can read any order. Vendors can read orders containing their items.
      allow read: if isAuth() && (
        resource.data.userId == request.auth.uid ||
        isStaff() ||
        (isVendor() && getVendorId() in resource.data.vendorIds)
      );
      // Only staff can update orders.
      allow update: if isStaff();
    }
    
    // SETTINGS
    match /settings/{settingId} {
        allow read, write: if isAdmin();
    }
    
    // PROMO CODES
    match /promocodes/{promoId} {
        allow read: if isAuth();
        allow write: if isAdmin();
    }
    
    // VENDORS
    match /vendors/{vendorId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
